header.navbar.navbar-default[role="navigation"]
  .container
    .navbar-header
      button.navbar-toggle[type="button" data-toggle="collapse" data-target=".navbar-ex1-collapse"]
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand href="#{root_url}#{ENV['RAILS_RELATIVE_URL_ROOT']}"
        = image_tag 'logo-red.svg'

    .collapse.navbar-collapse.navbar-ex1-collapse
      ul.nav.navbar-nav
        li
          = link_to "Explore", "#{root_url}#{ENV['RAILS_RELATIVE_URL_ROOT']}".concat(category_path(:featured))
        li
          = link_to "Docs", "#{root_url}#{ENV['RAILS_RELATIVE_URL_ROOT']}/docs"
        li
          = link_to "Blog", 'http://blog.asciinema.org'
        li
          = link_to "Console", "https://#{ENV['URL_HOST']}:8443/console"

      ul.nav.navbar-nav.navbar-right.session-info
        - if current_user
          li.dropdown
            a.dropdown-toggle[href="#" data-toggle="dropdown"]
              = current_user.avatar_image_tag
              = current_user.display_name
              b.caret
            ul.dropdown-menu
              li
                a href=("#{root_url}#{ENV['RAILS_RELATIVE_URL_ROOT']}"<<profile_path(current_user)) Profile
              li
                a href=("#{root_url}#{ENV['RAILS_RELATIVE_URL_ROOT']}"<<edit_user_path) Settings
              li
                a.logout href=("#{root_url}#{ENV['RAILS_RELATIVE_URL_ROOT']}"<<logout_path) Log out
        - else
          li
            a#log-in href=("#{root_url}#{ENV['RAILS_RELATIVE_URL_ROOT']}"<<new_login_path) Log in / Sign up
